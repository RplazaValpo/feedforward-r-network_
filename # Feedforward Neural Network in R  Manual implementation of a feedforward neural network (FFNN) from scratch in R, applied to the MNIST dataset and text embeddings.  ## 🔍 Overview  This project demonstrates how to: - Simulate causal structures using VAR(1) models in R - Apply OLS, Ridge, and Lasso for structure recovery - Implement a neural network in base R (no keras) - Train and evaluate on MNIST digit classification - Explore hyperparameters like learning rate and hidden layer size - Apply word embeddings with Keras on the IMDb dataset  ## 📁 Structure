cat("Pixel value range (train):\n")
print(range(mnist$train$x))


# =============================================================================
# PHASE 4 â€“ Preprocessing MNIST for Neural Network Input
# =============================================================================

# Step 4.1 â€“ Normalize pixel values to [0, 1]
x_train <- mnist$train$x / 255
x_test  <- mnist$test$x / 255

# Step 4.2 â€“ Flatten each 28x28 image into a 784-length vector
x_train <- array_reshape(x_train, dim = c(nrow(x_train), 28 * 28))
x_test  <- array_reshape(x_test, dim = c(nrow(x_test), 28 * 28))

# Step 4.3 â€“ One-hot encode the labels (0â€“9 becomes binary vector length 10)
y_train <- to_categorical(mnist$train$y, num_classes = 10)
y_test  <- to_categorical(mnist$test$y, num_classes = 10)

# Step 4.4 â€“ Final structure check
cat("âœ… Shape of x_train:\n")
print(dim(x_train))  # Expected: 60000 Ã— 784

cat("âœ… Shape of y_train:\n")
print(dim(y_train))  # Expected: 60000 Ã— 10

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# PHASE 5 â€“ Manual Implementation of a Feedforward Neural Network in Base R
# Goal: Build a basic MLP (Multi-Layer Perceptron) from scratch to classify MNIST digits
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# Step 1 â€“ Define network architecture
# Architecture: 784 (input) â†’ 128 (hidden) â†’ 10 (output)

input_size  <- 784     # Number of pixels per image (28 Ã— 28)
hidden_size <- 128     # Hidden layer neurons
output_size <- 10      # Output classes: digits 0â€“9

set.seed(123)  # For reproducibility

# Weight and bias initialization
W1 <- matrix(rnorm(input_size * hidden_size, mean = 0, sd = 0.01), nrow = input_size)
b1 <- rep(0, hidden_size)

W2 <- matrix(rnorm(hidden_size * output_size, mean = 0, sd = 0.01), nrow = hidden_size)
b2 <- rep(0, output_size)

cat("âœ… Weights and biases initialized.\n")

# Step 2 â€“ Activation functions

# ReLU for the hidden layer
relu <- function(z) {
  pmax(0, z)
}

# Softmax for the output layer
softmax <- function(z) {
  exp_z <- exp(z - max(z))  # Numerical stability
  exp_z / rowSums(exp_z)
}

cat("âœ… Activation functions defined (ReLU and Softmax).\n")

# Step 3 â€“ Loss function: Categorical Cross-Entropy

cross_entropy_loss <- function(y_pred, y_true) {
  # y_pred: softmax predictions (n Ã— 10)
  # y_true: one-hot encoded ground truth (n Ã— 10)
  epsilon <- 1e-8  # Avoid log(0)
  -sum(y_true * log(y_pred + epsilon)) / nrow(y_true)
}

cat("âœ… Loss function defined (Cross-Entropy).\n")

# Step 4 â€“ Forward propagation

forward_pass <- function(X) {
  Z1 <- X %*% W1 + matrix(b1, nrow = nrow(X), ncol = length(b1), byrow = TRUE)
  A1 <- relu(Z1)
  Z2 <- A1 %*% W2 + matrix(b2, nrow = nrow(A1), ncol = length(b2), byrow = TRUE)
  A2 <- softmax(Z2)

  list(Z1 = Z1, A1 = A1, Z2 = Z2, A2 = A2)
}

cat("âœ… Forward pass function implemented.\n")


# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# PHASE 6 â€“ Backpropagation and Parameter Updates
# Objective: Implement the backpropagation algorithm to train the Feedforward Neural Network
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# Step 1 â€“ Derivative of ReLU activation
relu_derivative <- function(z) {
  as.numeric(z > 0)
}
cat("âœ… Step 1: ReLU derivative defined.\n")

# Step 2 â€“ Full backpropagation function
# Computes gradients for weights and biases given the output of the forward pass
backward_pass <- function(X, y_true, cache) {
  m <- nrow(X)  # Number of samples
  
  A1 <- cache$A1
  A2 <- cache$A2
  Z1 <- cache$Z1
  
  # Gradient of output layer
  dZ2 <- (A2 - y_true) / m
  dW2 <- t(A1) %*% dZ2
  db2 <- colSums(dZ2)
  
  # Gradient of hidden layer
  dA1 <- dZ2 %*% t(W2)
  dZ1 <- dA1 * relu_derivative(Z1)
  dW1 <- t(X) %*% dZ1
  db1 <- colSums(dZ1)
  
  list(dW1 = dW1, db1 = db1, dW2 = dW2, db2 = db2)
}
cat("âœ… Step 2: Backpropagation implemented.\n")

# Step 3 â€“ Parameter update using gradient descent
update_parameters <- function(gradients, learning_rate = 0.01) {
  W1 <<- W1 - learning_rate * gradients$dW1
  b1 <<- b1 - learning_rate * gradients$db1
  W2 <<- W2 - learning_rate * gradients$dW2
  b2 <<- b2 - learning_rate * gradients$db2
}
cat("âœ… Step 3: Parameters updated successfully.\n")


# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# PHASE 7 â€“ Architecture and Consistency Checks
# Purpose: Ensure data dimensions and functions are aligned before training
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# Step 1 â€“ Check training data dimensions
cat("ğŸ“¦ Step 1: Data shape verification\n")
cat("Shape of X (train):\n")
print(dim(x_train))  # Expected: 60000 x 784
cat("Shape of Y (train):\n")
print(dim(y_train))  # Expected: 60000 x 10

# Step 2 â€“ Check dimensions of weights and biases
cat("\nâš™ï¸ Step 2: Weight and bias shapes\n")
cat("Shape of W1:", dim(W1), "\n")  # Expected: 784 x 128
cat("Length of b1:", length(b1), "\n")  # Expected: 128
cat("Shape of W2:", dim(W2), "\n")  # Expected: 128 x 10
cat("Length of b2:", length(b2), "\n")  # Expected: 10

# Step 2.1 â€“ Redefine ReLU to ensure consistent matrix output
relu <- function(z) {
  matrix(pmax(0, z), nrow = nrow(z), ncol = ncol(z))
}
cat("\nâœ… ReLU redefined to ensure consistent matrix output.\n")

# Step 3 â€“ Run forward pass on a small batch
cat("\nğŸ§  Step 3: Test forward_pass on 5 samples\n")
x_sample <- x_train[1:5, ]
y_sample <- y_train[1:5, ]
cache_test <- forward_pass(x_sample)

cat("Predictions (A2 â€“ softmax output):\n")
print(round(cache_test$A2, 3))

# Step 4 â€“ Evaluate cross-entropy loss on this small batch
cat("\nğŸ“‰ Step 4: Loss evaluation\n")
loss_sample <- cross_entropy_loss(cache_test$A2, y_sample)
cat("Loss over first 5 samples:", round(loss_sample, 4), "\n")

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# PHASE 8 â€“ Model evaluation under hyperparameter variation
# Goal: Explore the sensitivity of the model to learning rate and hidden layer size
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# Step 1 â€“ Define test configurations
configs <- list(
  list(learning_rate = 0.01, hidden_size = 64),
  list(learning_rate = 0.01, hidden_size = 128),
  list(learning_rate = 0.001, hidden_size = 64),
  list(learning_rate = 0.001, hidden_size = 128)
)

# Step 2 â€“ Parametric forward and backward functions

forward_pass <- function(X, W1, b1, W2, b2) {
  Z1 <- X %*% W1 + matrix(b1, nrow = nrow(X), ncol = length(b1), byrow = TRUE)
  A1 <- relu(Z1)
  Z2 <- A1 %*% W2 + matrix(b2, nrow = nrow(A1), ncol = length(b2), byrow = TRUE)
  A2 <- softmax(Z2)
  list(Z1 = Z1, A1 = A1, Z2 = Z2, A2 = A2)
}

backward_pass <- function(X, y_true, cache, W2) {
  m <- nrow(X)
  A1 <- cache$A1
  A2 <- cache$A2
  Z1 <- cache$Z1

  dZ2 <- (A2 - y_true) / m
  dW2 <- t(A1) %*% dZ2
  db2 <- colSums(dZ2)

  dA1 <- dZ2 %*% t(W2)
  dZ1 <- dA1 * relu_derivative(Z1)
  dW1 <- t(X) %*% dZ1
  db1 <- colSums(dZ1)

  list(dW1 = dW1, db1 = db1, dW2 = dW2, db2 = db2)
}

# Step 3 â€“ Training function with parameter injection

train_network <- function(x_train, y_train, learning_rate, hidden_size, epochs = 5) {
  input_size <- ncol(x_train)
  output_size <- ncol(y_train)

  # Initialize weights and biases
  W1 <- matrix(rnorm(input_size * hidden_size, 0, 0.01), nrow = input_size)
  b1 <- rep(0, hidden_size)
  W2 <- matrix(rnorm(hidden_size * output_size, 0, 0.01), nrow = hidden_size)
  b2 <- rep(0, output_size)

  # Training loop
  for (epoch in 1:epochs) {
    cache <- forward_pass(x_train, W1, b1, W2, b2)
    loss <- cross_entropy_loss(cache$A2, y_train)
    grads <- backward_pass(x_train, y_train, cache, W2)

    # Parameter updates (gradient descent)
    W1 <- W1 - learning_rate * grads$dW1
    b1 <- b1 - learning_rate * grads$db1
    W2 <- W2 - learning_rate * grads$dW2
    b2 <- b2 - learning_rate * grads$db2

    cat(sprintf("Epoch %d | Loss: %.4f\n", epoch, loss))
  }

  return(loss)
}

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# PHASE 8.4 â€“ Evaluation loop over different hyperparameter configurations
# Goal: Train the network under different settings and compare performance
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# Step 4 â€“ Loop over configurations and collect results
results <- data.frame()  # Initialize empty results table

for (cfg in configs) {
  cat("\nâ–¶ Evaluating configuration:\n")
  print(cfg)

  # Train model with a subset (1000 samples) for speed
  loss <- train_network(
    x_train[1:1000, ], y_train[1:1000, ],
    learning_rate = cfg$learning_rate,
    hidden_size = cfg$hidden_size,
    epochs = 5
  )

  # Append result to summary table
  results <- rbind(
    results,
    data.frame(
      learning_rate = cfg$learning_rate,
      hidden_size = cfg$hidden_size,
      final_loss = round(loss, 4)
    )
  )
}

# Final report
cat("\nâœ… Hyperparameter evaluation completed.\n")
print(results)

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# SECTION D â€“ Step-by-step implementation of Word Embeddings in R
# Objective: Sentiment classification on IMDb using embedding layers
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

library(keras)

# Step 1 â€“ Load IMDb dataset and pad sequences
max_features <- 10000  # Vocabulary size
maxlen <- 200          # Max length of each review (in words)

# Load data (only top max_features words are kept)
imdb <- dataset_imdb(num_words = max_features)

# Pad sequences to the same length
x_train <- pad_sequences(imdb$train$x, maxlen = maxlen)
x_test  <- pad_sequences(imdb$test$x,  maxlen = maxlen)
y_train <- imdb$train$y
y_test  <- imdb$test$y

cat("âœ”ï¸ IMDb dataset loaded and sequences padded.\n")

# Step 2 â€“ Define model architecture with an embedding layer
model <- keras_model_sequential() %>%
  layer_embedding(input_dim = max_features, output_dim = 32, input_length = maxlen) %>%
  layer_flatten() %>%
  layer_dense(units = 64, activation = "relu") %>%
  layer_dense(units = 1, activation = "sigmoid")

cat("âœ… Model defined with embedding layer.\n")

# Step 3 â€“ Compile model
model %>% compile(
  optimizer = "adam",
  loss = "binary_crossentropy",
  metrics = "accuracy"
)

cat("ğŸ›  Model compiled successfully.\n")

# Step 4 â€“ Train model
history <- model %>% fit(
  x_train, y_train,
  epochs = 5,
  batch_size = 512,
  validation_split = 0.2
)

# Step 5 â€“ Evaluate performance on test set
score <- model %>% evaluate(x_test, y_test)
cat(sprintf("ğŸ” Test accuracy: %.2f%%\n", score[2] * 100))
cat(sprintf("ğŸ“‰ Test loss: %.4f\n", score[1]))

# Step 6 â€“ Plot training history
plot(history)

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# Plotting Training Metrics from keras::fit() object using ggplot2
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

library(ggplot2)
library(tidyr)
library(dplyr)
library(patchwork)

# Step 1 â€“ Convert training history into a data frame
df <- as.data.frame(history$metrics)
df$epoch <- seq_len(nrow(df))

# Step 2 â€“ Reshape for loss plot
loss_df <- df %>%
  select(epoch, loss, val_loss) %>%
  pivot_longer(cols = -epoch, names_to = "metric", values_to = "value")

# Step 3 â€“ Reshape for accuracy plot
acc_df <- df %>%
  select(epoch, accuracy, val_accuracy) %>%
  pivot_longer(cols = -epoch, names_to = "metric", values_to = "value")

# Step 4 â€“ Plot loss over epochs
p1 <- ggplot(loss_df, aes(x = epoch, y = value, color = metric)) +
  geom_line(size = 1) +
  geom_point(size = 2) +
  labs(title = "Loss over Epochs", y = "Loss", x = NULL) +
  theme_minimal(base_size = 13) +
  theme(
    legend.position = "bottom",
    legend.title = element_blank()
  )

# Step 5 â€“ Plot accuracy over epochs
p2 <- ggplot(acc_df, aes(x = epoch, y = value, color = metric)) +
  geom_line(size = 1) +
  geom_point(size = 2) +
  labs(title = "Accuracy over Epochs", y = "Accuracy", x = "Epoch") +
  theme_minimal(base_size = 13) +
  theme(
    legend.position = "bottom",
    legend.title = element_blank()
  )

# Step 6 â€“ Combine both plots vertically using patchwork
combined <- p1 / p2 +
  plot_layout(guides = "collect") &
  theme(legend.position = "bottom")

# Display final visualization
print(combined)
